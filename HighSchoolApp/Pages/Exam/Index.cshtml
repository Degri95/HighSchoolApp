@page
@model HighSchoolApp.Pages.Exam.IndexModel
@{
}
<div>
    <h4><a href="./Edit">Add a new exam</a></h4>
</div>
<table cellpadding="5">
    <tr>
        <th>
            Exam Id
        </th>
        <th>
            Student Id
        </th>
        <th>
            Score
        </th>
        <th>
            Edit
        </th>
        <th>
            Delete
        </th>
    </tr>
    @foreach (DAL.Exam exam in Model.Exams)
    {
        <tr>
            <td>
                @exam.ExamId
            </td>
            <td>
                @exam.StudentId
            </td>
            <td> 
                @exam.Score
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@exam.ExamId">Edit</a>
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@exam.ExamId">Delete</a>
            </td>
        </tr>
    }
</table>

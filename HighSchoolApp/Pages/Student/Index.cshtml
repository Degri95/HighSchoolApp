@page
@model HighSchoolApp.Pages.Student.IndexModel
@{
}
<div>
    <h4><a asp-page="./Edit">Add a new student</a></h4>
</div>
<table cellpadding="5">
    <tr>
        <th>
            Student Id
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Edit
        </th>
        <th>
            Delete
        </th>
    </tr>
    @foreach(DAL.Student student in Model.Students)
    {
        <tr>
            <td>
                @student.StudentId
            </td>
            <td>
                @student.FirstName
            </td>
            <td>
                @student.LastName
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@student.StudentId">Edit</a>
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@student.StudentId">Delete</a>
            </td>
        </tr>
    }
</table>